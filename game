import random

# Список слов для угадывания
слова = ["АВТОМОБИЛЬ", "КОМПЬЮТЕР", "ПРОГРАММИРОВАНИЕ", "АЛГОРИТМ"]

# Выбор случайного слова из списка
случайное_слово = random.choice(слова).upper()

# Инициализация игрового поля с подчеркиваниями на месте букв
игровое_поле = "_" * len(случайное_слово)

# Список для отслеживания угаданных букв
угаданные_буквы = []

# Счетчик попыток
попытки = 0

# Флаг для окончания игры
угадано = False
