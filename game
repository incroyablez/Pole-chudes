import random

# Список слов для угадывания
слова = ["АВТОМОБИЛЬ", "КОМПЬЮТЕР", "ПРОГРАММИРОВАНИЕ", "АЛГОРИТМ"]

# Выбор случайного слова из списка
случайное_слово = random.choice(слова).upper()

# Инициализация игрового поля с подчеркиваниями на месте букв
игровое_поле = "_" * len(случайное_слово)

# Список для отслеживания угаданных букв
угаданные_буквы = []

# Счетчик попыток
попытки = 0

# Флаг для окончания игры
угадано = False

# Вывод начального игрового поля
print("Отгадываемое слово:", игровое_поле)

# Основной цикл игры
while not угадано:
    буква = input("Введите букву: ").upper()

    if len(буква) == 1 and буква.isalpha():
        if буква in угаданные_буквы:
            print("Вы уже ввели эту букву. Попробуйте другую.")
        elif буква in случайное_слово:
            # Если буква угадана, обновляем игровое поле
            угаданные_буквы.append(буква)
            новое_поле = ""
            for исходная_буква in случайное_слово:
                if исходная_буква in угаданные_буквы:
                    новое_поле += исходная_буква
                else:
                    новое_поле += "_"
            игровое_поле = новое_поле
            print("Отгаданное слово:", игровое_поле)
            if "_" not in игровое_поле:
                угадано = True
        else:
            print("Такой буквы нет в слове.")
        попытки += 1
    elif буква == случайное_слово:
        угадано = True
    else:
        print("Пожалуйста, введите одну букву или слово целиком.")


# Вывод сообщения о завершении игры
print("Поздравляем! Вы отгадали слово '", случайное_слово, "' за ", попытки, " попыток.")
